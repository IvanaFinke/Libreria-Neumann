@inherits LayoutComponentBase

<div class="main-layout">

    <HeaderComponent UserClickedSideBar="SetSidebarStatus"></HeaderComponent>

    @if(menuSeleccionado)
    {
        <div class="sidebar">
            <SidebarComponent></SidebarComponent>
        </div>
    }

    <div class="@PagesStyleName">
        <DetallesPagoComponent></DetallesPagoComponent>

    </div>

    <div class="footer">
        <FooterComponent></FooterComponent>
    </div>
    <></>
</div>
   


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>


@code{

    private bool menuSeleccionado = true;

    private string PagesStyleName = "pages-opened_sidebar";

    private void SetSidebarStatus()
    {
        if(menuSeleccionado)
        {
            menuSeleccionado = !menuSeleccionado;
            PagesStyleName = "pages-closed-sidebar";
        }
        else
        {
            menuSeleccionado = !menuSeleccionado;
            PagesStyleName = "pages-opened_sidebar";
        }
    }
}